{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "bun"
  },
  "newProjectRoot": "projects",
  "projects": {
    "ngx-kit": {
      "projectType": "library",
      "root": "projects/ngx-kit",
      "sourceRoot": "projects/ngx-kit/src",
      "prefix": "kit",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-kit/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-kit/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-kit/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:jest",
          "options": {
            "tsConfig": "projects/ngx-kit/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/ngx-kit/.storybook",
            "browserTarget": "ngx-kit:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/ngx-kit"
            ],
            "styles": ["projects/ngx-kit/style.scss"],
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/ngx-kit/.storybook",
            "browserTarget": "ngx-kit:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/ngx-kit"
            ],
            "styles": ["projects/ngx-kit/style.scss"],
            "outputDir": "storybook-static"
          }
        }
      }
    }
  }
}
